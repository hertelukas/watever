# RUN: python3 %s 2000 | watever -l 0 | wasm2wat - | FileCheck %s

# Test for a long dependency chain with a merge block.

# CHECK: func $f

import sys

print('target datalayout = "e-m:e-p:32:32-p10:8:8-p20:8:8-i64:64-i128:128-n32:64-S128-ni:1:10:20"')
print('target triple = "wasm32-unknown-unknown"')

n = int(sys.argv[1])
print("declare void @exit(i32)")
print("define i32 @f(ptr %p, i32 %v0) {")
for i in range(n):
    print(f'b{i}:')
    print(f'  %g{i} = getelementptr i32, ptr %p, i32 {i}')
    print(f'  %l{i} = load i32, ptr %g{i}')
    print(f'  %v{i+1} = add i32 %v{i}, %l{i}')
    print(f'  %c{i} = icmp sle i32 %l{i}, {i}')
    print(f'  br i1 %c{i}, label %merge, label %b{i+1}')
print(f'b{n}:')
print(f'  ret i32 %v{n}')
print('merge:')
print('  call void @exit(i32 1)')
print('  unreachable')
print('}')
